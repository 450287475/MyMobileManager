<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:settingItem="http://schemas.android.com/apk/res-auto"
    xmlns:save_setting_layout="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mumuseng.mymobilemanager.SaveSetting2Activity">
    <TextView
        style="@style/tv_title"
        android:text="2.手机卡绑定"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="通过绑定sim卡:\r\n下次重启手机如果发现sim卡变化\r\n就会发送报警短信"/>
    <com.example.mumuseng.view.Setting_item
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/si_saveset2_regist"
        settingItem:itemtitle="点击绑定sim卡"
        settingItem:onContent="sim卡已经被绑定"
        settingItem:offContent="sim卡还没有被绑定"
        ></com.example.mumuseng.view.Setting_item>
    <com.example.mumuseng.view.SaveSettingLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        save_setting_layout:item="2"
        ></com.example.mumuseng.view.SaveSettingLayout>
</LinearLayout>
